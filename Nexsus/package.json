{
  "name": "odoo-vector-mcp",
  "version": "0.1.0",
  "description": "Self-describing vector database MCP for Odoo CRM with source-table-prefixed encoding",
  "type": "module",
  "main": "dist/console/index.js",
  "bin": {
    "nexsus": "./dist/console/index.js",
    "nexsus-sync": "./dist/pipeline/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' node dist/console/index.js",
    "start:win": "set NODE_OPTIONS=--max-old-space-size=4096 && set NODE_TLS_REJECT_UNAUTHORIZED=0 && node dist/console/index.js",
    "start:low-mem": "node dist/console/index.js",
    "dev": "tsx watch src/console/index.ts",
    "sync": "node dist/pipeline/cli/index.js",
    "sync:dev": "tsx src/pipeline/cli/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:blendthink": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=blendthink"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.962.0",
    "@aws-sdk/s3-request-presigner": "^3.962.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@qdrant/js-client-rest": "^1.16.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "lru-cache": "^11.2.4",
    "ora": "^9.0.0",
    "voyageai": "^0.0.8",
    "xlsx": "^0.18.5",
    "xmlrpc": "^1.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/xmlrpc": "^1.3.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
